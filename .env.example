# Telegram Bot Configuration
# Get your token from @BotFather on Telegram
TELEGRAM_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Admin User IDs (comma-separated)
ADMIN_USER_IDS=XXXXXXXXXXX
# Cryptography - GENERATE WITH: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Database
DB_URL=sqlite:///./data/bot.db
# Monitoring Configuration
MAX_CONCURRENT_CHECKS=50
MIN_INTERVAL_SECONDS=20
DEFAULT_INTERVAL_SECONDS=20
CONNECTION_TIMEOUT=10
FAILURE_THRESHOLD=3
MAX_TARGETS_PER_USER=10
MAX_BENCH_TARGETS_PER_USER=5

# Telegram Queue
TELE_WORKERS=3
PER_CHAT_RATE_SECONDS=1.0

# Global Rate Limiting (NEW)
# Maximum failed admin command attempts before temporary ban
MAX_FAILED_ADMIN_ATTEMPTS=5
# Ban duration in seconds
ADMIN_BAN_DURATION=3600

# CPU Benchmark
CPU_BENCH_ENABLED=true
CPU_BENCH_MAINNET_URL=https://proton.saltant.io/Services?handler=CpuBenchmark&dataRange=0&networkType=1
CPU_BENCH_TESTNET_URL=https://proton.saltant.io/Services?handler=CpuBenchmark&dataRange=0&networkType=2
CPU_BENCH_THRESHOLD_SECONDS=0.35
CPU_BENCH_INTERVAL=300

# Logging
LOG_LEVEL=INFO

# Bot Branding
BOT_NAME=SysAlert
